{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://inkstone.pro"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://inkstone.pro https://*.framer.app https://*.framer.website"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
